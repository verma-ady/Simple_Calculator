<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/activity_main">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/num1"
        android:hint="Enter number 1"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgb"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/num2"
        android:hint="Enter Number 2"
        android:clickable="true"
        android:layout_below="@+id/num1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Addition"
        android:id="@+id/add"
        android:onClick="onbuttonclickadd"
        android:clickable="true"
        android:layout_below="@+id/res"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtract"
        android:id="@+id/sub"
        android:onClick="onbuttonclicksub"
        android:clickable="true"
        android:layout_below="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiply"
        android:id="@+id/mul"
        android:onClick="onbuttonclickmul"
        android:clickable="true"
        android:layout_below="@+id/sub"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Divide"
        android:id="@+id/div"
        android:onClick="onbuttonclickdiv"
        android:clickable="true"
        android:layout_below="@+id/mul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Final Result"
        android:minHeight="40sp"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="215dp"
        android:id="@+id/res"
        android:layout_below="@+id/num2"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:layout_toRightOf="@+id/imgb"
        android:text="Calculator"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="35sp"
        android:textStyle="italic|bold"/>

    <ImageButton
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:id="@+id/imgb"
        android:onClick="onimageclick"
        android:layout_alignBottom="@+id/heading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/index"
        android:clickable="true" />

</RelativeLayout>
