<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mukesh.simple_calculator.DisMsg"
    android:background="#99cccc"
    android:id="@+id/activity_dis_msg">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:text="About Calculator"
        android:gravity="center_horizontal|center_vertical"

        android:id="@+id/abtcalc"
        android:background="#3B3131"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textStyle="italic|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="This is a basic calculating app that is used to add, subtract, multiply or divide two numbers
        This app is just for practice to develop complex and more useful android apps"
        android:textSize="20dp"
        android:layout_marginTop="5dp"

        android:gravity="center_horizontal"
        android:background="#3B3131"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_below="@+id/abtcalc" />

</RelativeLayout>
